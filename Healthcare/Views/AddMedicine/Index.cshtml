@model Healthcare.Models.Medicine
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "AdminLayout";
    string errorMessage = ViewBag.errorMessage;
}
<!DOCTYPE html>

<html>
<head>
    <style>
        .container{
            padding-left : 150px;
        }
    </style>
    <title>Add Medicine Details</title>
</head>
<body>
    <div class="container">
        <h3><label>Add Medicine Details</label></h3>
        <form method="post">
            <input asp-for="name" type="text" id="medicineName" placeholder="Medicine Name" />
            <br />
            <br />
            <input asp-for="category" type="text" id="medicineCategory" placeholder="Medicine Category" />
            <br />
            <br />
            <input asp-for="quantity" type="text" id="medicineQuantity" placeholder="Quantity" />
            <br />
            <br />
            <div id="message">@errorMessage</div>

            <br />
            <button id="medicineSubmit">Add Medicine</button>
        </form>
    </div>
    
</body>
</html>