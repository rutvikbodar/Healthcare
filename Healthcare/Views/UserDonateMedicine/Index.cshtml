@model Healthcare.Models.Donation
@using System.Collections.Generic;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "UserLayout";
    string errorMessage = ViewBag.errorMessage;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        input, select {
            min-width: 200px;
        }
        form,h3{
            margin-left : 100px;
        }
    </style>
    <title>Donate Medicine</title>
</head>
<body>
    <h3><label>Donate Medicine</label></h3>
    <form asp-action="Index" method="post">
        <input id="medCategory" asp-for="medicineCatagory" placeholder="Medicine Category" type="text"/>
        <input id="donateMedName" asp-for="medicineName" placeholder="Medicine Name" type="text"/>
        <input id="quantity" asp-for="donateQuantity" placeholder="Quantity" type="number"/>
        <button id="submitDonate" type="submit">Submit</button>
        <br />
        <br />
        <div id="message">@errorMessage</div>
    </form>
    <br />
</body>
</html>
