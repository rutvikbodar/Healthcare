
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "AdminLayout";
    List<Medicine> allMedicines = ViewBag.allMedicines as List<Medicine>;
}
<!DOCTYPE html>

<html>
<head>
    <style>
        tr,th{
            border : 1px solid black;
            min-width : 300px;
        }
    </style>
    <title>Admin Home</title>
</head>
<body>
    <h3><label>Available Medicine Details</label></h3>
    <br />
    <table>
        <tr>
            <th><label>Medicine Id</label></th>
            <th><label>Medicine Name</label></th>
            <th><label>Medicine Category</label></th>
            <th><label>Medicine Quantity</label></th>
        </tr>
        @if(allMedicines.Count > 0)
            {
                @for(int i=0;i<allMedicines.Count;i++)
                {
                    string medId = string.Format("medId{0}", i);
                    string medName = string.Format("medName{0}",i);
                    string medCategory = string.Format("medCategory{0}",i);
                    string medQty = string.Format("medQty{0}",i);
                    <tr>
                        <th><label id=@medId>@allMedicines[i].id</label></th>
                        <th><label id=@medName>@allMedicines[i].name</label></th>
                        <th><label id=@medCategory>@allMedicines[i].category</label></th>
                        <th><label id=@medQty>@allMedicines[i].quantity</label></th>
                    </tr>
                }
            }
    </table>
    @if (allMedicines.Count == 0)
    {
        <label id="noData">No medicines found</label>
    }
</body>
</html>